<div class="articleSummary clearfix">
  <div class="image">
    <%= link_to( image_tag(article.image_url, :class => :thumb), article.url, :target => :_blank ) %>
  </div>
  
  <div class="title">
    <%= link_to article.title, article.url, :target => :_blank %>
  </div>
  
  <div class="date">
    <%= article.published_on.strftime('%b %-d, %Y') %>
  </div>
  
  <div class="content">
    <%= article.summary %>
  </div>
</div>